block content
	// Landing Page
	section.landing-page
		.picture-grid

			include partials/header.jade

			.grid__container
				.grid__cell.grid__cell--hover.grid__cell--top-start
					.slide-in
						p.slide-in__text Vítejte!
					
				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1.slide-in__title Dostupnost
						p.slide-in__text Obytňákem se dostanete i na težko přístupná místa. Proč si v destinaci pučovat auto z pujcovny kdyz muzete cestovat vlastnim.

				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1.slide-in__title Multifunkcnost
						p.slide-in__text Auta jsou určená pro celou řadu využítí, ať už pro nesutalé přesuny nebo dlouhodobé pobyty na jednom míste, v kempu nebo ve volné přírodě.
						
				.grid__cell.grid__cell--hover.grid__cell--top-end
					.slide-in
						h1.slide-in__title Kvalita
						p.slide-in__text Všechny přestavby ktere ptovadim na autech jsou certifikované urady a splnuji bezpecnostni a technické parmatery.
				
				.grid__cell.grid__cell--hover.grid__cell--bottom-start
					.slide-in
						h1.slide-in__title Skladnost
						p.slide-in__text Malá velikost vozidla usnadnuje nalodit vozidlo na trajekt a setri penize na dalnicncich poplatcich.
					
				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1.slide-in__title Komfort
						p.slide-in__text At uz cestujete kamkoliv, vozite si sebou pohodli domova. V aute mužete spát, vařit, sprchovat se a samozřejmostí je vestavěný chemicky zachod a možnost připojit se na elektřinu.
	
				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1.slide-in__title Jednoduché cestování
						p.slide-in__text Obytnáky A.C.S. představují novou generaci cestování s důrazem na minimalnost a funkcnost. Je to kompromis mezi hotelovym pokojem v turistickem stredisku a stanováním ve volné přírodě.
	
				.grid__cell.grid__cell--hover.grid__cell--bottom-end
					.slide-in
			
			p.slogan ...cestování s obytňákem kamkoliv.
		// picture grid end
		
		a.arrow-link(href="#home-page")
			img.arrow(src="img/ctrl.svg", alt="")
	
