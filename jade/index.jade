	// Landing Page
	section.landing-page#picture-grid
		.picture-grid
			.grid__container
				.grid__cell.grid__cell--hover.grid__cell--top-start
					.slide-in
						p.slide-in__text.slide-in__text--aligncenter <strong>Vítejte</strong></br>na stránkách firmy</br>A.C.S.
						
				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1.slide-in__title Využití
						p.slide-in__text Auta jsou ideální pro dálniční cestování, polykání kilometrů,  neustálé přesuny. Poskytují určitý komfort potřeb k pobytu, jak na městských parkovištích, kempech, tak i ve volné přírodě. Malá velikost vozidla usnadňuje nalodit vozidlo na trajekt a hlavně, za rozumnou cenu.

				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1.slide-in__title Dostupnost
						p.slide-in__text S vozem se dostanete i na těžko přístupná místa jako centra velkoměst, parkoviště v historických částech nebo podobné spleti úzkých uliček. Přece jenom je dodávka méně nápadná než velký obytný vůz.
						
				.grid__cell.grid__cell--hover.grid__cell--top-end
					.slide-in
						h1.slide-in__title Kvalita
						p.slide-in__text U všech přestaveb jsou použity certifikované komponenty od firmy REIMO a splňují bezpečnostní a technické parametry.
				
				.grid__cell.grid__cell--hover.grid__cell--bottom-start
					.slide-in
						h1.slide-in__title Skladnost
						p.slide-in__text Malá velikost vozidla usnadnuje nalodit vozidlo na trajekt a setri penize na dalnicncich poplatcich.
					
				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1.slide-in__title Komfort
						p.slide-in__text Ať už cestujete kamkoliv, vozíte si sebou pohodlí domova. V autě můžete spát, vařit, sprchovat se a samozřejmostí je vestavěný chemický záchod a možnost připojit se na elektřinu.
	
				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1.slide-in__title Jednoduché cestování
						p.slide-in__text Vozy A.C.S. umožňují cestování s důrazem na minimálnost a funkčnost. Je to kompromis mezi hotelovým pokojem v turistickém středisku a stanováním ve volné přírodě.
	
				.grid__cell.grid__cell--hover.grid__cell--bottom-end
					.slide-in
					
				.show-slides 
					img.show-slides__icon(src="img/eye.svg")
					span.show-slides__txt Ukaž vše
