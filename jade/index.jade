extends partials/layout.jade

block header-wrapper

block content
	// Landing Page
	.landing-container
		.picture-grid

			include partials/header.jade
			
			.grid__container
				.grid__cell.grid__cell--hover.grid__cell--top-start
					.slide-in
						p Vítejte!
					
				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1 Dostupnost
						p Obytňákem se dostanete i na težko přístupná místa. Proč si v destinaci pučovat auto z pujcovny kdyz muzete cestovat vlastnim.

				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1 Multifunkcnost
						p Auta jsou určená pro celou řadu využítí, ať už pro nesutalé přesuny nebo dlouhodobé pobyty na jednom míste, v kempu nebo ve volné přírodě.
						
				.grid__cell.grid__cell--hover.grid__cell--top-end
					.slide-in
						h1 Kvalita
						p Všechny přestavby ktere ptovadim na autech jsou certifikované urady a splnuji bezpecnostni a technické parmatery.
				
				.grid__cell.grid__cell--hover.grid__cell--bottom-start
					.slide-in
						h1 Skladnost
						p Malá velikost vozidla usnadnuje nalodit vozidlo na trajekt a setri penize na dalnicncich poplatcich.
					
				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1 Komfort
						p At uz cestujete kamkoliv, vozite si sebou pohodli domova. V aute mužete spát, vařit, sprchovat se a samozřejmostí je vestavěný chemicky zachod a možnost připojit se na elektřinu.
	
				.grid__cell.grid__cell--hover.grid__cell--middle
					.slide-in
						h1 Jednoduché cestování
						p Obytnáky A.C.S. představují novou generaci cestování s důrazem na minimalnost a funkcnost. Je to kompromis mezi hotelovym pokojem v turistickem stredisku a stanováním ve volné přírodě.
	
				.grid__cell.grid__cell--hover.grid__cell--bottom-end
					.slide-in
			
			p.slogan ...cestování s obytňákem kamkoliv.
		// picture grid end
		
		a.arrow-link(href="#after-content")
			img.arrow(src="img/ctrl.svg", alt="")
	
	// landing container end
	
	// Second Page
	#after-content
		img(src="img/after-content.jpg", alt="")

block scripts

	script.
		$(function() {
		  $('a[href*="#"]:not([href="#"])').click(function() {
			if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
			  var target = $(this.hash);
			  target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
			  if (target.length) {
				$('html, body').animate({
				  scrollTop: target.offset().top
				}, 800);
				return false;
			  }
			}
		  });
		});  // Smooth Scroll

		$(window).bind('scroll', function() {
			 if ($(window).scrollTop() > 200) {
				 $('.arrow-link').hide(150);
			 }
			 else {
				 $('.arrow-link').show();
		 }
		}); // Hide arrow link 
		
		$(window).load(function () {
			setTimeout(function () {
				$(".slogan").show("slide", {direction: "down"}, 1500);
			 }, 800);
		}); // Slogan slide up
		
