extends partials/skeleton.jade

block navigation
	header.site-header.site-header--fixed
		a.logo(href="#") Auto Caravan Sport #[span s.r.o.]
		.menu-icon &#9776;
		ul.nav__ul(role="navigation")
			li: a(href="#presentation") O co jde
			li: a(href="#work") Má práce
			li: a(href="#about") Jak to začalo
			li: a(href="#contact") Kontakt	

block body

	.jumbotron.jumbotron--index-bg#header

	p.slogan Vítejte v mém světě dodávkové velikosti</br>...ani malé ani velké.
	section.site-intro
		h3.site-intro__h Vítejte na stránkách firmy <strong>Auto Caravan Sport s.r.o.</strong>
		.site-intro__img
		p.site-intro__txt Jmenuji se Libor Palisa a mojí dlouholetou vášní je hledat způsoby, jakými by bylo možno vybavit obytný vůz dodávkové velikost. Vybral jsem si velikost mezi osobním autem a obytným velikánem.

	//
	// Presentation
	//
	.presentation-outer
		article.presentation#presentation
			.presentation__content
				.presentation__overlay.presentation__overlay--js-on
				section.leftPane__container
					.leftPane
						h3.leftPane__h Vůz pro volný čas
						.leftPane__presIntro
							p.leftPane__presIntro__p Vozy tohoto typu jsou založené na dokonalém využití vnitřního prostoru pro maximální možné pohodlí na cestách. Mé zájmy by se daly charakterizovat v následujících oblastech: 
							p.leftPane__presIntro__p2 Využití  /  Dostupnost  /  Komfort  /  Kvalita
							button.leftPane__presBtn
								.circle
									p Více
								svg.presBtn__1st(viewbox="0 0 100 100") 
									path(d="M 50,0 L 60,10 L 20,50 L 60,90 L 50,100 L 0,50 Z")
								svg.presBtn__2nd(viewbox="0 0 100 100")
									path(d="M 50,0 L 60,10 L 20,50 L 60,90 L 50,100 L 0,50 Z")

				ul.rightPane.rightPane--js-hidden
					li
						.img-container.img-container-2
						p #[span Využití] Auta jsou ideální pro polykání kilometrů na dálnicích. Dokáží poskytnout určitý komfort potřeb k pobytu a přesto mohou sloužit v každodenním provozu jako osobní vozy.

					li
						.img-container.img-container-3
						p #[span Dostupnost] S vozem se dostanete i na těžko přístupná místa jako přeplněná centra velkoměst, parkoviště v historických částech a to samé při toulkách v přírodě. Přece jen je dodávka méně nápadná než velký obytný vůz.
					
					li
						.img-container.img-container-5
						p #[span Komfort] V autě můžete spát, vařit, sprchovat se a samozřejmostí je i chemický záchod. Technické možnosti vnitřního vybavení jsou veliké. Ať už cestujete kamkoliv, vozíte si sebou pohodlí domova.
					li
						.img-container.img-container-4
						p #[span Kvalita] U přestaveb jsou použity komponenty od předních výrobců zabývajících se karavaningem. Německá firma REIMO se  zabývá speciálně prodejem do těchto typů vozidel. Nabízí i celé vozy, nebo jejich kompletní výbavu.		

	//
	// Work
	//
	article.work#work
		h1.index-article__h1 Má práce
		ul.work__ul
			li.work__item
				a.work__link.ford-custom__link--bg(href="./ford-custom.html")
					.work__link__h
						svg.podsekce__svg(viewbox="0 0 100 100")
							path(d="M 50,0 L 60,10 L 20,50 L 60,90 L 50,100 L 0,50 Z")
						p Ford Transit Custom
				p.work__txt Má poslední práce, dezignově povedený Ford jsem se pokusil  přizpůsobit buď početnější rodině nebo jenom sólo páru. <a href="./ford-custom.html">Více</a>

			li.work__item
				a.work__link.ford-2000__link--bg(href="./ford-2000.html")
					.work__link__h
						svg.podsekce__svg(viewbox="0 0 100 100")
							path(d="M 50,0 L 60,10 L 20,50 L 60,90 L 50,100 L 0,50 Z")
						p Ford Transit 2000
				p.work__txt Nejrozšířenější  vestavba pro krátké typy vozů. Počet sedících jsou pro 4 osoby a celkem pohodlné jsou i 4 místa pro spaní. <a href="./predchozi-prace.html">Více</a>

			li.work__item
				a.work__link.ford-1996__link--bg(href="./ford-1996.html")
					.work__link__h
						svg.podsekce__svg(viewbox="0 0 100 100")
							path(d="M 50,0 L 60,10 L 20,50 L 60,90 L 50,100 L 0,50 Z")
						p Ford Transit 1996
				p.work__txt Vzpomínka na první práci, která uspokojila 4členou rodinu a sloužila poctivě 16 let karavaningu. <a href="./predchozi-prace.html">Více</a>

	//
	// About
	//
	.about-outer
		article.about#about
			h1.index-article__h1.article-about__h1 O firmě
			section.about__content
				section.about-txt
					.about-txt__wrap
						h2  Jak to začalo
						.about-txt__wrap__inner
							p Myšlenka začala v roce 1994 po zakoupení staršího vozu Ford Transit. Nadšení pro volnost, prožití svého volného času, se stávala silnější a po zamilování se do windsurfingu bylo rozhodnuto.  Otvíraly se nové možnosti. Nemusel jsem k vůli surfu utíkat od rodiny ale rodinu jsem brával sebou. 14denní dovolená se protáhla od jara do podzimu. Od Baltu, přes všechny jezera a přehrady až k středozemnímu moři. Příjezdy do neznámých oblastí a já měl vše sebou, přece jen dodávalo více klidu. Auto bylo pro mne něco víc než jen převoz z místa do místa.<br><br>Jak děti rostli, začalo docházet k jeho postupné přestavbě a já se rozhodoval, co je důležité koupit dřív. Finance z rodinného rozpočtu prosadit na zakoupení životně důležité součásti obytného vozu, byl prostě problém. Byla to nejdelší přestavba ale šla, tak nějak nenápadně s mou rodinou. Vše mělo své kouzlo. Teď, co se život přehoupl do druhé poloviny, je to zase trochu jiné. Zakoupil jsem už nové auto, Ford Transit Custom a představa o vnitřní vestavbě dostala novou tvář. S manželkou nám stačí jedna postel a blížící se vnoučátka si budem brát na víkend jenom po jednom. Na těchto stránkách bych  Vás chtěl seznámit s tímto typem karavaningu a ze svou částečnou činností v tomto směru. 
		
	article
		.sub-about
			.profile-pic
			p.profile__txt <strong>O mně</strong><br>Jsem vyučený automechanik a povoláním autolakýrník. Cestovávní a sport vždy hrály douležitou roli v mém životě. Firma A.C.S je skloubení těchto zájmů s praktičností...
	//
	// Contact
	//
	article.contact#contact
		h1.index-article__h1.article-contact__h1 Kontakt
		section.contact__content
			.contact-wrapper
				h2 Kontakt
				p Email: libor.palisa@gmail.com
				p Facebook: Auto Caravan Sport
				p adresa
				p Sokoloska 2530<br>Kromeriz<br>767 01
				.contact__map
			
	article.sub-contact
		.contact-form
			h2.sub-contact__headline Napište mi
			.form__name
				p Jméno
			.form__email
				p Email
			.form__zprava
				p Napište mi co Vás zaujalo...
			.form__sent 
